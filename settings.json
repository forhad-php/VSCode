{
    /* Controls how windows are being reopened after a restart.
     * all: Reopen all windows.
     * folders: Reopen all folders. Empty workspaces will not be restored.
     * one: Reopen the last active window.
     * none: Never reopen a window. Always start with an empty one. */
    "window.restoreWindows": "all",
    // PHPCS
    "phpcs.enable": true,
    "phpcs.standard": "WordPress",
    "phpcs.executablePath": "C:\\Users\\Forhad\\AppData\\Roaming\\Composer\\vendor\\bin\\phpcs.bat",
    "phpcs.autoConfigSearch": true,
    // The path to a PHP 7+ executable.
    "php.executablePath": "C:\/xampp\/php\/php.exe",
    "php.validate.executablePath": "C:\/xampp\/php\/php.exe",
    "jetbrainsKeymap.promptV3Features": true,
    "editor.formatOnPaste": true,
    // Extension "phpcbf" by "Per Soderlind" settings
    "phpcbf.enable": true,
    "phpcbf.onsave": false,
    "phpcbf.debug": true,
    "phpcbf.standard": "WordPress",
    "phpcbf.executablePath": "C:\/Users\/Forhad\/AppData\/Roaming\/Composer\/vendor\/bin\/phpcbf.bat",
    // Extension : "GitLens" Settings required
    "git.enabled": true,
    "git.path": "C:\\cmder\\vendor\\git-for-windows\\cmd\\git.exe",
    "git.ignoreMissingGitWarning": true,
    // --- Theme Setup Start --- //
    "window.title": "${rootName}", // "<Custom Text> : ${rootName}${separator}${activeEditorShort}"
    "workbench.tree.renderIndentGuides": "none",
    "workbench.colorTheme": "Material Theme Palenight High Contrast",
    "editor.fontFamily": "Operator Mono Lig",
    "editor.fontLigatures": true,
    "editor.fontSize": 17,
    "editor.lineHeight": 24.65,
    "editor.letterSpacing": 0.3,
    "editor.fontWeight": "100",
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 3,
    "editor.cursorBlinking": "solid",
    "editor.renderWhitespace": "all",
    "editor.snippetSuggestions": "top",
    "workbench.startupEditor": "newUntitledFile",
    "editor.glyphMargin": true,
    "explorer.confirmDragAndDrop": false,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                /* Scope Naming Documentation → https://www.sublimetext.com/docs/3/scope_naming.html
                Or find here by the language →
                https://github.com/Microsoft/vscode/tree/master/extensions
                then e.g: css/syntaxes/css.tmLanguage.json */
                /* Theme src →
                C:\Users\Forhad\.vscode\extensions\equinusocio.vsc-material-theme-2.8.2
                \out\themes\Material-Theme-Palenight-High-Contrast.json */
                "scope": [
                    // following will be in italic
                    "punctuation.definition.comment", // Symbols that delineate a comment, e.g. // or /*
                    "entity.name.type.class", // class names
                    "keyword", // import, export, return…
                    "constant.language", // booleans and null values
                    "constant.numeric", // numbers
                    "storage.modifier", // static keyword
                    // JS Scopes
                    "storage.type.class.js", // class keyword
                    // CSS Scopes
                    "support.constant.font-name.css",
                    "support.constant.color.w3c-standard-color-name.css",
                    "support.function.url.css",
                    "support.function.transform.css",
                    "support.function.calc.css",
                    "meta.function.color.css",
                    "meta.function.gradient.css",
                    "support.function.misc.css",
                    "support.function.timing-function.css",
                    "support.function.shape.css",
                    "punctuation.section.function.begin.bracket.round.css",
                    "punctuation.section.function.end.bracket.round.css",
                    "meta.selector.css",
                    "keyword.operator.combinator.css",
                    "constant.other.color.rgb-value.hex.css",
                ],
                "settings": {
                    "fontStyle": "italic", // italic, bold, underline
                }
            },
            {
                "scope": [
                    // following will be excluded from italics (VSCode has some defaults for italics)
                    "invalid",
                    "keyword.operator",
                    // "constant.numeric.css",
                    "keyword.other.unit.px.css",
                    // "support.constant.property-value.css",
                    // "constant.numeric.decimal.js",
                    // "constant.numeric.json",
                    "comment",
                    "entity.other.attribute-name.class.css",
                ],
                "settings": {
                    "fontStyle": "" // The empty string unsets inherited settings.
                }
            },
            {
                "scope": [
                    // "scope": "variable", // for all kind of variables
                    "variable.other.php",
                    "keyword.operator.assignment.php",
                    "meta.var-single-variable.expr.js",
                ],
                "settings": {
                    "fontStyle": "",
                }
            },
            {
                "scope": "meta.object-literal.key", // JavaScript object properties
                "settings": {
                    "foreground": "#bec2da"
                }
            }
        ]
    },
    // Formatting Optional.
    "editor.formatOnSave": false,
    "eslint.run": "onType",
    "eslint.autoFixOnSave": true,
    "editor.wordWrap": "on",
    "editor.multiCursorModifier": "ctrlCmd",
    "breadcrumbs.enabled": true,
    // --- Theme Setup End --- //
    "liveServer.settings.donotShowInfoMsg": true,
    // Extension : Bracket Pair Colorizer
    "bracketPairColorizer.consecutivePairColors": [
        "()",
        "[]",
        "{}",
        ["</", ">"],
        ["<", "/>"],
        "<>",
        [
            "", // Gold
            "", // Orchid
            "", // LightSkyBlue
        ],
        "", // Red
    ],
    "editor.matchBrackets": false, // batter false when "Bracket Pair Colorizer" extentsion enabled.
    /**
    Extension : "Custom CSS and JS Loader" by "be5invis"
    Tips      : Every time have changed the imports option,
                'Custom CSS and JS Loader' need to disable and re-enable with F1 menu. */
    "vscode_custom_css.imports": [
        "file:///C:/vscss/styles.css"
    ],
    "vscode_custom_css.policy": true,
    // Terminal Settings
    "terminal.integrated.fontFamily": "Monofur for Powerline",
    "terminal.integrated.fontSize": 18,
    "terminal.integrated.lineHeight": 1.2,
    /**
    Source → https://gist.github.com/lol-russo/1c7a0b958be4b9434c5a120f24d5e7c3
    Source → https: //glitchbone.github.io/vscode-base16-term */
    "workbench.colorCustomizations": {
        "terminalCursor.background": "#A5A2A2",
        "terminalCursor.foreground": "#A5A2A2",
        "terminal.ansiBlack": "#090300",
        "terminal.ansiBlue": "#005e86",
        "terminal.ansiBrightBlack": "#5C5855",
        "terminal.ansiBrightBlue": "#01A0E4",
        "terminal.ansiBrightCyan": "#00FFFF",
        "terminal.ansiBrightGreen": "#01A252",
        "terminal.ansiBrightMagenta": "#A16A94",
        "terminal.ansiBrightRed": "#FF0000",
        "terminal.ansiBrightWhite": "#F7F7F7",
        "terminal.ansiBrightYellow": "#FDED02",
        "terminal.ansiCyan": "#007c7c",
        "terminal.ansiGreen": "#00743a",
        "terminal.ansiMagenta": "#A16A94",
        "terminal.ansiRed": "#AD0000",
        "terminal.ansiWhite": "#A5A2A2",
        "terminal.ansiYellow": "#9b9000"
    },
    "terminal.integrated.shell.windows": "C:\\Windows\\SysWOW64\\cmd.exe",
    "terminal.integrated.shellArgs.windows": [
        "/k C:\\cmder\\vendor\\init.bat"
    ],
    // Working Markdown Snippet
    "[markdown]": {
        "editor.quickSuggestions": true
    },
    // Extension : Project Manager
    "projectManager.sortList": "Recent", // Name, Saved, Path, Recent
    "projectManager.git.baseFolders": [
        "C:\\xampp\\htdocs\\"
    ],
    // Extension : "JS & CSS Minifier" by "Olback"
    "es6-css-minify.genCSSmap": true,
    "es6-css-minify.genJSmap": true,
    "es6-css-minify.minifyOnSave": "no", // change to "yes" when needed
    // Extension : "Color Info" by "Matt Bierner"
    "colorInfo.fields": [
        "css-color-name",
        "alpha"
    ],
    /**
     * Extension : "Line Note" by "tkrkt"
     * Tips: You can put hyperlinks in notes by writing #L42 or ../foo.js#L12-L15.
     * #L12-L15 means line number 12 to 15
     */
    "linenote.lineColor": "rgba(41, 42, 56, 0.5)",
    "linenote.rulerColor": "rgba(255, 255, 0, 0.4)",
    "linenote.automaticallyDelete": false,
    "linenote.showGutterIcon": true,
    // HTML & CSS
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "html.autoClosingTags": true,
    "editor.colorDecorators": true, // color picker
    // Code Spell Checker.
    "cSpell.userWords": [
        "Shortcode",
        "aspectratio",
        "fancybox",
        "fontawesome",
        "gotoslide",
        "readmore",
        "shapedplugin",
        "sliderpro",
        "subpackage"
    ],

}
