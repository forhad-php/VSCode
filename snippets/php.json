{
	"WP Die": {
		"prefix": "die",
		"body": [
			"wp_die( $1 );"
		],
		"description": "Kill WordPress execution and conditionally display HTML message with error message."
	},
	"Var Dump": {
		"prefix": "dump",
		"body": [
			"var_dump( $1 );"
		],
		"description": "Displays structured information about variables/expressions including its type and value"
	},
	"Pre Dump": {
		"prefix": "dumpre",
		"body": [
			"echo '<pre>' , var_dump( $1 ) , '</pre>';"
		],
		"description": "var_dump with pre tag"
	},
	"Doc Comment": {
		"prefix": "doc",
		"body": [
			"/**",
			" * Summary$1",
			" *",
			" * @link  $2",
			" * @since $3",
			" *",
			" * @package    $4",
			" * @subpackage $5",
			" */",
		],
		"description": "Doc comment"
	}
}
